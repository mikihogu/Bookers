<p class="notice">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <span>
          <%= link_to "Show", book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>




<h2>New book</h2>

<%= form_with model: @book, url:'/books', method: :post do |f| %>

  <div class="error_messages">
    <% if @book.errors.any? %>
      <%= @book.errors.count %> error occurred saving this new book.
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
    
<% end %>
  