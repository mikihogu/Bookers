<h1><strong>Editing Book</strong></h1>

<%= form_with model: @book do |f| %>

  <div class="error_messages">
    <% if @book.errors.any? %>
      <%= @book.errors.count %> error occurred.
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Update Book' %>
    
  </div>
<% end %>

<span>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", '/books' %>
</span>