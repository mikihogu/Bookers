<h1><strong>Editing Book</strong></h1>

<%= form_with model: @book do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved.
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Update Book' %>
    
  </div>
<% end %>

<span>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", '/books' %>
</span>